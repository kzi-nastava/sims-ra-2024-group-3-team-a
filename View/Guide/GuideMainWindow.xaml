<Window x:Class="BookingApp.View.GuideMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View"
        mc:Ignorable="d"
        Title="GuideMainWindow" Height="600" Width="800"  ResizeMode="NoResize">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
       <!-- <Grid Grid.Row="1">-->
        <ListView x:Name="listViewTours" 
 Background="Transparent"
 ItemsSource="{Binding ToursTodayDTO}" 
 SelectedItem="{Binding SelectedTourDTO}"  
 BorderBrush="Transparent" 
 BorderThickness="0" 
 Margin =" 10,10,10,0"
 Height="300" 
 ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden" Grid.Row="1"
 VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <Border BorderThickness="2" BorderBrush="LightGray"  Background="White" Margin="0,10,5,10">
                        <StackPanel Background="White" Width="300"  Orientation="Horizontal"  Margin ="25,15,25,15">
                            <StackPanel Margin="10,0,10,0">
                                <TextBlock FontWeight="Bold" FontSize="20"   Margin="10,0,0,0" Text="{Binding Name}" />
                                <Border BorderBrush="LightSlateGray" BorderThickness="1">
                                    <StackPanel>
                                        <DockPanel>
                                            <TextBlock Text="Location: " />
                                            <TextBlock FontWeight="Bold" Text="{Binding LocationDTO}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="Duration: " />
                                            <TextBlock FontWeight="Bold" Text="{Binding Duration}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="Language: " />
                                            <TextBlock FontWeight="Bold" Text="{Binding Language}" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="Date: " />
                                            <TextBlock FontWeight="Bold" Text="{Binding BeginingTime}" />
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <Border BorderThickness="1" BorderBrush="Gray" Margin="10,0,0,0">
                                <Image Source="{Binding Path=Images[0]}" Height="100" Width="110" Stretch="Fill" />
                            </Border>
                        </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
