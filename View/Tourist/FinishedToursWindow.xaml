<Window x:Class="BookingApp.View.Tourist.FinishedToursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingApp.View.Tourist"
        mc:Ignorable="d"
        Title="FinishedToursWindow" Height="450" Width="800">
    <Grid Background="#f6f1ea">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Menu DockPanel.Dock="Top"  BorderThickness="1" >
                <MenuItem Header="Home" Foreground="#fa8ec4" FontWeight="Bold"></MenuItem>
                <MenuItem Header="My Tours"  Foreground="#fa8ec4" FontWeight="Bold" Command="{Binding ShowMyToursWindowCommand}" ></MenuItem>
                <MenuItem Header="Tour Requests" Foreground="#fa8ec4"></MenuItem>
                <MenuItem Header="Create Request" Foreground="#fa8ec4"></MenuItem>
                <MenuItem Header="Rate Tour" Foreground="#fa8ec4" Command="{Binding ShowFinishedToursWindowCommand}"></MenuItem>
                <MenuItem Header="Vouchers" Foreground="#fa8ec4" Command="{Binding ShowVoucherWindowCommand}"></MenuItem>
                <MenuItem Header="Inbox" Foreground="#fa8ec4" Command="{Binding ShowInboxWindowCommand}"></MenuItem>
                <MenuItem Header="Logout" Foreground="#fa8ec4" Command="{Binding LogOutCommand}" ></MenuItem>
            </Menu>
        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Margin="30,10,0,0" FontWeight="Heavy" FontSize="40">Finished tours: </TextBlock>
        </Grid>
        <Border Grid.Row="1" BorderThickness="3" BorderBrush="#d470a2" Margin="30,80">
            <Grid Background="White" Grid.Row="1">


                <Grid Grid.Column="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Grid.Row="1">
                            <ListView ItemsSource="{Binding FinishedToursDTO}" SelectedItem="{Binding SelectedTourDTO}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" >
                                <ListView.ItemTemplate>
                                    <DataTemplate >
                                        <Border BorderThickness="2" BorderBrush="Black"  Background="#f6f1ea" Margin="10,10,5,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"/>
                                                    <ColumnDefinition Width="auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel  Width="500"  Orientation="Horizontal"  Margin =" 10,10,0,10" Grid.Column="0">
                                                    <Image Source="{Binding Path=Images[0]}" Height="100" Width="110" Stretch="Fill" />
                                                    <StackPanel Margin="30,0,0,0">
                                                        <DockPanel Margin="5">
                                                            <TextBlock Text="Tour name: " />
                                                            <TextBlock FontWeight="Bold"   Text="{Binding Name}" />
                                                        </DockPanel>
                                                        <DockPanel Margin="5">
                                                            <TextBlock Text="Location: " />
                                                            <TextBlock  FontWeight="Bold"   Text="{Binding LocationDTO}" />
                                                            <!--<Button Content="Rate tour" Width="70" Height="30" HorizontalAlignment="Center" Margin="50,0,0,0" />-->
                                                        </DockPanel>
                                                        <DockPanel  Margin="5">
                                                            <TextBlock Text="Date: " />
                                                            <TextBlock FontWeight="Bold"  Text="{Binding BeginingTime}" />
                                                        </DockPanel>
                                                    </StackPanel>
                                                   
                                                </StackPanel>
                                                <Button Grid.Column="1" BorderThickness="2" Background="#fae8f1" FontWeight="Bold" Foreground="Black" Command="{Binding DataContext.ShowTourReviewWindowCommand, RelativeSource={RelativeSource AncestorType=ListView}}" Content="Rate tour" Margin="0,10,60,10" Width="100" Height="60"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>




        </Border>
        
    </Grid>

