                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Number of people: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding MaxTouristNumber}" />
                                    </DockPanel>
                                <Button BorderBrush="Black" Command="{Binding ShowAppropriateWindowCommand}"  BorderThickness="0" navigation:EnterKeyBehavior.EnterKeyCommand="{Binding ShowAppropriateWindowCommand}"></Button>
