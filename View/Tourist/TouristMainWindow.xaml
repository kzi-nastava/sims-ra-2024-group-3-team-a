            <ListView x:Name="listViewTours" 
          Background="Transparent"
          ItemsSource="{Binding FilteredToursDTO}" 
          SelectedItem="{Binding SelectedTourDTO}"  
          BorderBrush="Transparent" 
          BorderThickness="0" 
          Margin =" 10,10,10,0"
          Height="300" 
          ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Hidden" Grid.Row="2"
          VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.ShowAppropriateWindowCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="{Binding SelectedItem, ElementName=listViewTours}" />
                </ListView.InputBindings>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <Border BorderThickness="2" BorderBrush="LightGray"  Background="White" Margin="0,10,5,10">
                        <StackPanel Background="White" Width="300"  Orientation="Horizontal"  Margin =" 30,10,30,10">
                                <Image Source="{Binding Path=Images[0]}" Height="100" Width="110" Stretch="Fill" />
                                <StackPanel Margin="30,0,0,0">
                                    <DockPanel>
                                        <TextBlock Text="Location: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding LocationDTO}" />
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Duration: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding Duration}" />
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Language: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding Language}" />
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Date: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding BeginingTime}" />
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Number of people: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding MaxTouristNumber}" />
                                    </DockPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        
    </Grid>
</Window>
