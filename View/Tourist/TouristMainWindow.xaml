        <Border Margin="10,10,10,0" Grid.Row="2" Padding="10">

            <ListView  x:Name="listViewTours"  ItemsSource="{Binding FilteredToursDTO}"  Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Height="300" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="300" Margin="5">
                                <Image Source="{Binding Path=Images[0]}" Height="100" Width="100" Stretch="Fill" />
                                <StackPanel Margin="10,0,0,0">
                                    <DockPanel>
                                        <TextBlock Text="Location: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding LocationDTO}" />
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Text="Duration: " />
                                        <TextBlock FontWeight="Bold" Text="{Binding Duration}" />
