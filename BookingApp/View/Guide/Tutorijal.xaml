<Window x:Class="BookingApp.View.Guide.Tutorijal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookingApp.View.Guide"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="SearchTutorial">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="221*"/>
            <RowDefinition Height="155*"/>
        </Grid.RowDefinitions>
        <MediaElement x:Name="mediaPlayer" Margin="10,10,10,10" LoadedBehavior="Manual" Stretch="Uniform" Visibility="Visible" Grid.RowSpan="2" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,280,0,0" Grid.Row="1">
            <Button Content="Play" Click="PlayButton_Click" Margin="5"/>
            <Button Content="Pause" Click="PauseButton_Click" Margin="5"/>
            <Button Content="Stop" Click="StopButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>

</Window>

