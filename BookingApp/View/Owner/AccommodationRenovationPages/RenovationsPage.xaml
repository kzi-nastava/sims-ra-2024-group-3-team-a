<Page x:Class="BookingApp.View.Owner.AccommodationRenovationPages.RenovationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:BookingApp.View.Owner.AccommodationRenovationPages"
      mc:Ignorable="d"
      d:DesignHeight="750" d:DesignWidth="430"
      Title="RenovationsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Renovations Toolbar-->
        <Border BorderThickness="1" Grid.Row="0" Background="CadetBlue" BorderBrush="CadetBlue" CornerRadius="30,30,30,30">
            <Grid Background="Transparent" Margin="3,3,3,3">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" Foreground="#d4ff00">RENOVATIONS</Label>
                <Button Command="{Binding ShowSideMenuCommand}" BorderThickness="0" Background="Transparent" x:Name="buttonSideMenu" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="40" Height="40">
                    <Image Name="imageSideMenu" Source="../../../Resources/Images/Owner/menu.png" />
                </Button>
            </Grid>
        </Border>

        <Button Command="{Binding ShowAddAccommodationPageCommand}"  Grid.Row="1" HorizontalAlignment="Right" BorderThickness="0" Background="Transparent" x:Name="buttonFunction" Width="40" Height="40" Margin="0,0,13,0">
            <Image x:Name="imageFunction" Source="../../../Resources/Images/add.png" />
        </Button>

        <!--Lista renovacija-->
        <StackPanel Grid.Row="2">
            <ListView ItemsSource="{Binding AccommodationRenovationsDTO}" SelectedItem="{Binding SelectedAccommodationRenovationDTO}" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="5">
                            <StackPanel Orientation="Horizontal" Width="390">
                                <StackPanel.Background>
                                    <SolidColorBrush Color="CadetBlue" Opacity="0.84"/>
                                </StackPanel.Background>
                                <Image Source="{Binding Path=AccommodationDTO.Images[0]}" Height="100" Width="100" Stretch="Fill"></Image>
                                <StackPanel Margin="50,0,0,0">
                                    <Label Foreground="#d4ff00" HorizontalAlignment="Left" FontSize="24" FontWeight="Bold"  Content="{Binding Path=AccommodationDTO.Name}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Foreground="#d4ff00" HorizontalAlignment="Left" FontSize="18" Content="{Binding Path=BeginDate}"/>
                                        <Label Foreground="#d4ff00" HorizontalAlignment="Left" FontSize="18" Content=" - "/>
                                        <Label Foreground="#d4ff00" HorizontalAlignment="Left" FontSize="18" Content="{Binding Path=EndDate}"/>
                                    </StackPanel>
                                    <Label Foreground="#d4ff00" HorizontalAlignment="Left" FontSize="18" Content="{Binding Path=Description}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
